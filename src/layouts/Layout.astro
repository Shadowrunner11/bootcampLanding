---
import BackToTop from '../components/BackToTop/BackToTop.astro';
import Metatags from '../components/Metatags/Metatags.astro'
import '../styles/global.sass'
import '../styles/normalize.sass'

import { prefixWithBase } from '../ts/utils';
import WhatsappCTA from '../components/WhatsappCTA/WhatsappCTA.astro';
import FixedBox from './FixedBox.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;

const favIconUrl = prefixWithBase('/favicon.gif')
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/gif" href={favIconUrl} />
		<meta name="generator" content={Astro.generator} />
		<Metatags />
		<title>{title}</title>
	</head>
	<body class="relative">
		<div class="wrapper">
			<slot />
			<FixedBox>
				<WhatsappCTA />
				<BackToTop />
			</FixedBox>
		</div>
	</body>
</html>

