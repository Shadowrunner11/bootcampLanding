---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar/Navbar.astro';
import Section from '../layouts/Section.astro';
import Hero from '../components/Hero/Hero.astro';
import Themes from '../components/Themes/Themes.astro';
import Contact from '../components/Contact/Contact.astro';
import InstructorsList from '../components/Instructors/InstructorsList.astro';
import DeveloperAlert from '../components/DeveloperAlert/DeveloperAlert.astro';
import Footer from '../layouts/Footer.astro';
import FooterBody from '../components/Footer/FooterBody.astro';
import MaybeCarousel from '../layouts/MaybeCarousel.astro';
import UnavailableContactsToast from '../components/UnavailableContactsToast/UnavailableContactsToast.astro';

const isDeveleporMode = import.meta.env.PUBLIC_APP_MODE === 'development' || import.meta.env.DEV
---

<Layout title='Bootcamp para principinates CONOVATEC'>
  <div class='root relative'>
    <Navbar />
    <main>
      { isDeveleporMode && <DeveloperAlert /> }
      <Hero />
      <Section sectionClasses={['md:p-12']}>
        <h2 id="themes" class="text-4xl md:text-6xl font-bold mb-12">¿Qué aprenderás?</h2>
        <Themes />
      </Section>
      <Section sectionClasses={['bg-base-200']}>
        <h2 id="themes" class="text-4xl md:text-6xl font-bold mb-12 p-12">Instructores</h2>
        <MaybeCarousel>
          <InstructorsList isCard={true}/>
        </MaybeCarousel>
      </Section>
      <Contact />
			<UnavailableContactsToast dataToast="toast-without-contacts"/>
    </main>
    <Footer >
      <FooterBody />
    </Footer>
    <script src='../ts/main.ts'></script>
  </div>
</Layout>
