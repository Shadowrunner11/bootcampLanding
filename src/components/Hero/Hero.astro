---
import { prefixWithBase } from '../../ts/utils';
import CTA from '../CTA/CTA.astro';
import { backgroundURl } from './properties.json'
import styles from './styles.module.css'

const imageUrl = prefixWithBase(import.meta.env.DEV ? backgroundURl.dev : backgroundURl.prod)
---
<header class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse gap-12 md:px-20 mt-20">
    <div class="max-w-md">
      <img src={ imageUrl } class="w-full" />
    </div>
    <div>
      <span class="btn btn-sm btn-outline mb-8">Comunidad de voluntarios</span>
      <h1 class="text-4xl md:text-6xl font-bold">
        Bootcamp 
        <div class={styles.gradientText}>CONOVA tec_</div>
      </h1>
      <p class="py-6 text-2xl">
        Únete a nuestro bootcamp de programación y comienza a construir las herramientas que cambiarán el mundo.
      </p>
      <CTA href="https://forms.gle/KLrJHZtsMsbD4fiJA" nameCta="inscribirse" text="Preinscríbete ya" target="_blank"/>
    </div>
  </div>
</header>

